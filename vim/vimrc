set nocompatible
set backup
set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/

" Color scheme
colorscheme wombat
sy on
syntax on

" Visual
set number
set ruler
set showcmd
set nowrap
set novisualbell
set scrolloff=5

set laststatus=2
set statusline=%F%m%r%h%w%y\ %{fugitive#statusline()}%=\ col:%c%V\ ascii:%b\ pos:%o\ lin:%l\/%L\ %P

" Buffers
set autowrite
set hidden

" Indentation
set autoindent
set smartindent

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" Plugins
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

filetype on
filetype indent on
filetype plugin on

let g:clang_complete_auto=0
let g:clang_snippets=1
let g:clang_conceal_snippets=1

" Keys
map ,cd :cd %:p:h<CR>
map ,fa :Tabularize assignment<CR>
map ,tw :ToggleWord<CR>
map <C-i> i<Space><Esc>r
map <C-Up> ddkP
map <C-Down> ddp

vnoremap x "_x
vnoremap X "_X

inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>

inoremap <C-Right> <NOP>
inoremap <C-Left> <NOP>
inoremap <Home> <NOP>
inoremap <End> <NOP>
noremap <C-Right> <NOP>
noremap <C-Left> <NOP>
noremap <Home> <NOP>
noremap <End> <NOP>

inoremap <Insert> <NOP>
inoremap <Del> <NOP>
inoremap <PageUp> <NOP>
inoremap <PageDown> <NOP>
noremap <Insert> <NOP>
noremap <Del> <NOP>
noremap <PageUp> <NOP>
noremap <PageDown> <NOP>

