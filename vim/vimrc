set nocompatible
set backup
set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/

" -- Color scheme --
colorscheme tango-morning
sy on
syntax on

" -- Disable error bells --
set noerrorbells
set visualbell
set t_vb=

" -- Visual --
set nowrap
set number
set relativenumber
set scrolloff=5
set showcmd

set laststatus=2
set statusline=%F%m%r%h%w%y\ %{fugitive#statusline()}%=\ col:%c%V\ ascii:%b\ pos:%o\ lin:%l\/%L\ %P

" -- Command Completion --
set wildmode=longest:full
set wildmenu

" -- Buffers --
set autowrite
set hidden

" -- Indentation --
set autoindent
set smartindent

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" -- Plugins and extras --
so ~/.vim/functions

call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

filetype on
filetype indent on
filetype plugin on

let g:clang_complete_auto=0
let g:clang_complete_copen=0
let g:clang_conceal_snippets=1
let g:clang_hl_errors=0
let g:clang_snippets=0
let g:clang_use_library=1

autocmd BufReadPost *.cpp,*.h call FoldCopyright()

" -- Keys --
let mapleader=","

map <Leader>fa :Tabularize assignment<CR>
map <Leader>fc :Tabularize /,\zs/<CR>

nnoremap <F9> :TagbarToggle<CR>
nnoremap <Leader>tw :ToggleWord<CR>
nnoremap <Leader>cd :cd %:p:h<CR>
nnoremap <Leader>o :CommandT<CR>

map <C-Up> ddktP
map <C-Down> ddp

map <C-s> :w<CR>
imap <C-s> <Esc>:w<CR>a

vnoremap x "_x
vnoremap X "_X

inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>

inoremap <C-Right> <NOP>
inoremap <C-Left> <NOP>
inoremap <Home> <NOP>
inoremap <End> <NOP>
noremap <C-Right> <NOP>
noremap <C-Left> <NOP>
noremap <Home> <NOP>
noremap <End> <NOP>

inoremap <Insert> <NOP>
inoremap <Del> <NOP>
inoremap <PageUp> <NOP>
inoremap <PageDown> <NOP>
noremap <Insert> <NOP>
noremap <Del> <NOP>
noremap <PageUp> <NOP>
noremap <PageDown> <NOP>

