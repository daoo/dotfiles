set nocompatible
set backup
set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/

" -- Color scheme --
colorscheme wombat
sy on
syntax on

au BufRead,BufNewFile *.go set filetype=go

" -- Disable error bells --
set noerrorbells
set visualbell
set t_vb=

" -- Visual --
set nowrap
set number
set relativenumber
set scrolloff=5
set showcmd

" -- Status line --

set laststatus=2
set statusline=%F%m%r%h%w%y\ %{fugitive#statusline()}%=\ col:%c%V\ ascii:%b\ pos:%o\ lin:%l\/%L\ %P

" -- Command Completion --
set wildmode=longest:full
set wildmenu

" -- Buffers --
set autowrite
set hidden

" -- Indentation --
set autoindent
set smartindent

set tabstop=8
set shiftwidth=2
set softtabstop=2
set expandtab

" -- Plugins and extras --
filetype off

set rtp+=~/.vim/bundle/vundle/ 
call vundle#rc()

" Let vundle mange it self
Bundle 'gmarik/vundle'

" Github
Bundle 'godlygeek/tabular'
Bundle 'msanders/snipmate.vim'
"Bundle 'rip-rip/clang_complete'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-surround'
Bundle 'wincent/Command-T'

" vim-scripts repos
Bundle 'L9'
Bundle 'FuzzyFinder'
Bundle 'Tagbar'
Bundle 'a.vim'
Bundle 'go.vim'
Bundle 'toggle_words.vim'

filetype plugin indent on

so ~/.vim/functions

" Clang Complete
let g:clang_auto_select=0
let g:clang_complete_auto=0
let g:clang_complete_copen=1
let g:clang_hl_errors=1
let g:clang_periodic_quickfix=0
let g:clang_snippets=0
let g:clang_conceal_snippets=1
let g:clang_use_library=1

" -- Keys --
so ~/.vim/disable-keys

let mapleader=","

" Plugins and tools
map <Leader>fl :FufLine<CR>

map <Leader>aa :Tabularize assignment<CR>
map <Leader>ac :Tabularize /,\zs/<CR>

noremap <F9> :TagbarToggle<CR>
noremap <Leader>tw :ToggleWord<CR>
noremap <Leader>cd :cd %:p:h<CR>
noremap <Leader>o :CommandT<CR>
noremap <F2> :A<CR>

" Moving lines
nnoremap <C-Up> ddkP
nnoremap <C-Down> ddp

" Saving
map <C-s> :w<CR>
imap <C-s> <Esc>:w<CR>a

