background no
out_to_console yes
update_interval 4
short_units yes
use_spacer left

TEXT
^i($HOME/.xmonad/icons/cpu.xbm) ${cpu}% \
^i($HOME/.xmonad/icons/mem.xbm) ${memperc}% \
^i($HOME/.xmonad/icons/hdd.xbm) ${fs_used_perc /}% ${fs_used_perc /home}% \
^i($HOME/.xmonad/icons/net_down.xbm) ${downspeed eth0} \
^i($HOME/.xmonad/icons/net_up.xbm) ${upspeed eth0} \
^i($HOME/.xmonad/icons/clock.xbm) ${time %a %b %d %H:%M}
