[alias]
  a    = add
  ap   = add --patch
  bmv  = branch --move
  bv   = branch --verbose
  ci   = commit
  cia  = commit --amend
  cif  = commit --fixup
  cifa = !bash -c 'git commit --fixup=\"${0}\" && git commit --amend'
  co   = checkout
  cob  = checkout --branch
  cp   = cherry-pick
  cpa  = cherry-pick --abort
  cpc  = cherry-pick --continue
  dc   = diff --cached
  df   = diff
  edit = !bash -c '${EDITOR} $(git ls-files --modified --other --exclude-standard | uniq)'
  ff   = merge --ff-only @{u}
  l    = !git --no-pager log --decorate --oneline --no-merges -n20
  lg   = !git --no-pager log --decorate --oneline --graph -n15
  lb   = !git --no-pager log --no-decorate --oneline ^master ^origin/master
  lbh  = !git --no-pager log --no-decorate --oneline ^master ^origin/master HEAD
  lu   = !git --no-pager log --no-decorate --oneline ^HEAD @{u}
  ll   = log --decorate --patch
  p    = push
  pf   = push --force
  poh  = push --set-upstream origin HEAD
  pom  = push origin master
  rb   = rebase --autostash
  rba  = rebase --abort
  rbc  = rebase --continue
  rbi  = rebase --autostash --interactive
  rbia = rebase --autostash --interactive --autosquash
  rbs  = rebase --skip
  re   = reset
  reh  = reset --hard
  sa   = stash apply
  sc   = stash clear
  sd   = stash drop
  sl   = stash list
  sp   = stash pop
  ss   = stash save
  st   = status --short --branch
  sur  = submodule update --recursive

[color]
  pager = false
  ui = true

[push]
  default = simple

[diff]
  tool = nvim -d

[merge]
  tool = nvim -d

[difftool]
  prompt = false

[pager]
  log = nvim -R -
  show = nvim -R -
  diff = nvim -R -

[interactive]
  diffFilter = /usr/share/git/diff-highlight/diff-highlight
