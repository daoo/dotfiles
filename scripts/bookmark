#!/usr/bin/env bash

if [[ -f "$1" ]]; then
  target="$(realpath "$1")"
  if [[ -n "$2" ]]; then
    name="$2"
  else
    name="$(basename "$target")"
  fi
else
  target="$(realpath "$PWD")"
  if [[ -n "$1" ]]; then
    name="$1"
  else
    name="$(basename "$target")"
  fi
fi

echo "$HOME/bookmarks/$name -> $target"
ln -fsn "$target" "$HOME/bookmarks/$name"
