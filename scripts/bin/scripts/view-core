#!/usr/bin/env bash

set -eu

logrun() {
  echo "$@"
  "$@"
}

# TODO: Predictable temp dir

# FIXME: Problem arise when there is more than one package-database. Which
# happens when GHC is updated and the old database is kept.
dbflag=""
if dbdir="$(find .cabal-sandbox -type d -name '*-packages.conf.d' -print -quit 2>/dev/null)"; then
  if [[ -n "$dbdir" ]]; then
    dbflag="-package-db=$dbdir"
  fi
fi

srcdir=""
if [[ -d src ]]; then
  srcdir="-isrc"
fi

tmpdir="$(mktemp --tmpdir=/tmp --directory view-core.XXXXXXX)"
trap "rm -rf '$tmpdir'" EXIT SIGINT SIGTERM

logrun "${GHC:-ghc}" \
  -o "$tmpdir/a.out" \
  -outputdir "$tmpdir" \
  "$srcdir" \
  "$dbflag" \
  -dsuppress-coercions \
  -dsuppress-module-prefixes \
  -dsuppress-uniques \
  -dsuppress-idinfo \
  -dsuppress-type-applications \
  -dppr-cols270 \
  -dppr-case-as-let \
  -ddump-to-file \
  -ddump-simpl \
  "$@"

( cd "$tmpdir" && ${EDITOR:-nvim} )
