#!/usr/bin/env bash

set -euo pipefail

if [[ $# -ne 1 ]]; then
  echo "Usage: $0 copy|show|qr|print" >&2
  exit 1
fi

read key_file < ~/.config/pw/keyfile
read database < ~/.config/pw/database

pw-list() {
  keepassxc-cli ls \
    --key-file "$key_file" \
    --flatten --recursive \
    "$database"
}

pw-show() {
  keepassxc-cli show \
    --key-file "$key_file" \
    "$database" \
    "$1"
}

pw-copy() {
  keepassxc-cli clip \
    --key-file "$key_file" \
    "$database" \
    "$1"
}

pw-print() {
  keepassxc-cli show \
    --key-file "$key_file" \
    --attributes password \
    --show-protected \
    "$database" \
    "$1"
}

if ! list="$(pw-list)"; then
  echo "Error: failed to list passwords." >&2
  exit 1
fi

selection="$(echo "$list" | fzf)"
if [ -z "$selection" ]; then
  exit 1
fi

case "$1" in
  "copy") pw-copy "$selection" ;;
  "show") pw-show "$selection" ;;
  "qr") pw-print "$selection" | qrencode -t ANSI256 ;;
  "print") pw-print "$selection" ;;
esac
