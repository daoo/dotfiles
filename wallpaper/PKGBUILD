pkgname=daoo-wallpaper
pkgver=1.2
pkgrel=1
pkgdesc="Package for wallpaper randomization."
url="http://github.com/daoo"
arch=('any')
depends=('findutils' 'coreutils')
makedepends=()
source=('random-wallpaper' 'random-wallpaper.service' 'random-wallpaper.timer')

package()
{
  install -Dm755 "random-wallpaper" "$pkgdir/usr/bin/random-wallpaper"
  install -Dm644 "random-wallpaper.service" "$pkgdir/usr/lib/systemd/system/random-wallpaper.service"
  install -Dm644 "random-wallpaper.timer" "$pkgdir/usr/lib/systemd/system/random-wallpaper.timer"
}

# vim:set ts=2 sw=2 et:
