pkgname=powersave
pkgver=1.0
pkgrel=1
pkgdesc="PKGBUILD for the powersave program."
url="http://github.com/daoo"
arch=('x86_64' 'i686')
depends=()
makedepends=('gcc' 'make' 'xz')
source=("powersave.tar.xz")

build() {
  cd "${srcdir}/"
  make release cxx=g++
}

package() {
  cd "${srcdir}/"
  install -Dm 755 "build/$pkgname" "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
