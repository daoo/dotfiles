[alias]
  a   = add
  ap  = add --patch
  ci  = commit
  cia = commit --amend
  co  = checkout
  dc  = diff --cached
  df  = diff
  ff  = merge --ff-only origin/master
  l   = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --date=relative
  ll  = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --numstat
  lll = log -u
  p   = push
  pf  = push -f
  pom = push origin master
  rb  = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbs = rebase --skip
  re  = reset
  sa  = stash apply
  sc  = stash clear
  sd  = stash drop
  sl  = stash list
  sp  = stash pop
  ss  = stash save
  st  = status -sb

  pullall = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
[push]
  default = simple
