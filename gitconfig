[core]
  editor       = vim
  autocrlf     = input
  excludesfile = ~/.gitignore
[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
[alias]
  df = diff
  dc = diff --cached
  st = status
  ci = commit
  co = checkout

  filelog = log -u
  fl      = log -u

  sa = stash apply
  sl = stash list
  sp = stash pop
  ss = stash save

  ls = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --date=relative
  ll = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --numstat
[push]
  default = current
