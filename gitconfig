[core]
  editor       = vim
  autocrlf     = input
  excludesfile = ~/.gitignore
[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
[alias]
  df = diff
  dc = diff --cached
  st = status
  ci = commit
  co = checkout
  w  = whatchanged
  lg = log --oneline --decorate --graph
[push]
  default = current
