[core]
  editor = vim
[alias]
  a  = add
  ap = add --patch
  df = diff
  dc = diff --cached
  st = status -sb
  ci = commit
  cia = commit --amend
  co = checkout

  r  = rebase
  ri = rebase -i
  rc = rebase --continue

  ff = merge --ff-only origin/master
  pom = push origin master

  sl = stash list
  sa = stash apply
  sp = stash pop
  sd = stash drop
  sc = stash clear
  ss = stash save

  l = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --date=relative
  ll = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --numstat
  lll = log -u
[push]
  default = simple
